<?xml version="1.0"?>
<dia_config>
	<site>solr/scielo</site>
	<bvs_url>http://books.scielo.org/</bvs_url>
	<about_bvs_url>http://books.scielo.org/scielo-livros/</about_bvs_url>
	<home_url>http://books.scielo.org/</home_url>
	<search_server>localhost:8080</search_server>
	<photocopy_url/>
	<documents_per_page>20</documents_per_page>
    <max_export_records>2000</max_export_records>
	<default_lang>pt</default_lang>
	<log_user_search>true</log_user_search>
	<log_dir>./logs/</log_dir>
	<environment>development</environment>
	<addthis_pub></addthis_pub>
	<addthis_buttons>
		<button>favorites</button>
		<button>facebook</button>
		<button>delicious</button>
	</addthis_buttons>
	<show_related_docs>false</show_related_docs>
	<related_min_score>40</related_min_score>
	<google_analytics_tracking_id></google_analytics_tracking_id>
	<maintenance>false</maintenance>
	<feedback_id></feedback_id>
	<browse_index_url></browse_index_url>
	<mobile_version>false</mobile_version>

	<search_collection_list>
		<collection>
			<name>books</name>
			<cluster_items_limit>10</cluster_items_limit>
			<initial_filter></initial_filter>
			<index_list>
				<index>
					<name>ALL</name>
					<prefix>tw</prefix>
				</index>
				<index>
					<name>TI</name>
					<prefix>title</prefix>
				</index>
				<index>
					<name>AU</name>
					<prefix>author</prefix>
				</index>
				<index>
					<name>ISBN</name>
					<prefix>ISBN</prefix>
				</index>
			</index_list>
			<where_list>
				<where>
					<name>BOOK</name>
					<filter></filter>
				</where>
				<where>
					<name>PART</name>
					<filter></filter>
				</where>
				<where>
					<name>BOOK_PART</name>
					<filter></filter>
				</where>
			</where_list>
			<sort_list>
				 <sort>
					 <name>RELEVANCE</name>
					 <value>score desc</value>
				 </sort>
				 <sort>
				 	 <default_for_empty_query>1</default_for_empty_query>
					 <name>YEAR_DESC</name>
					 <value>da desc</value>
				 </sort>
				 <sort>
					 <name>YEAR_ASC</name>
					 <value>da asc</value>
				 </sort>
			</sort_list>
            <format_list>
            	<format>
            		<name>summary</name>
            	</format>
            </format_list>
		</collection>
	</search_collection_list>
</dia_config>
